# AutoRedTeam-Orchestrator Environment Variables
# Copy this file to .env and fill in your values

# ========== Security ==========
# Master key for encrypting sensitive data (auto-generated on first run)
# To generate manually: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
REDTEAM_MASTER_KEY=

# MCP Authorization API Key (optional, for strict mode)
# To generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
AUTOREDTEAM_API_KEY=

# Authorization mode: strict, permissive (default), disabled
AUTOREDTEAM_AUTH_MODE=permissive

# ========== API Keys ==========
# OpenAI API (for AI-driven analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (for AI-driven analysis)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Shodan API (for reconnaissance)
SHODAN_API_KEY=your_shodan_api_key_here

# Censys API (for asset discovery)
CENSYS_API_ID=your_censys_api_id_here
CENSYS_API_SECRET=your_censys_api_secret_here

# VirusTotal API (for malware analysis)
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# NVD API (for CVE database - optional but recommended for faster sync)
# Apply at: https://nvd.nist.gov/developers/request-an-api-key
NVD_API_KEY=your_nvd_api_key_here

# GitHub Token (for CVE intelligence from GitHub advisories)
# Create at: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# ========== Proxy Settings ==========
# HTTP/HTTPS Proxy (e.g., for Burp Suite)
HTTP_PROXY=
HTTPS_PROXY=
# Example: HTTP_PROXY=http://127.0.0.1:8080

# SOCKS Proxy
SOCKS_PROXY=
# Example: SOCKS_PROXY=socks5://127.0.0.1:1080

# ========== Global Config ==========
# SSL certificate verification (true/false)
VERIFY_SSL=false

# Rate limiting delay in seconds (0.1-5.0)
RATE_LIMIT_DELAY=0.3

# Maximum concurrent threads (1-100)
MAX_THREADS=50

# HTTP request timeout in seconds (5-60)
REQUEST_TIMEOUT=10

# ========== Logging ==========
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/redteam.log
